@section ContenHeader{
    <section class="content-header">
        <h1>
            Thống kê theo dự án
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/Project/Create"><i class="fa fa-dashboard"></i> Đăng kí dự án</a></li>
        </ol>
    </section>
}
<div class="box">
    <div class="box-body">
        @using (Html.BeginForm("Project", "Static", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="control-label col-md-2">Thời gian bắt đầu </label>
                <div class="col-md-10">
                   
                    @Html.TextBox("dtStart",(string) ViewBag.sdate, new { @class = "form-control", @autoforcus = "autoforcus", id = "dtStart", @placeholder = "MM/dd/yyyy" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Thời gian kết thúc </label>
                <div class="col-md-10">

                    @Html.TextBox("dtEnd", (string)ViewBag.edate, new { @class = "form-control", @autoforcus = "autoforcus", id = "dtEnd", @placeholder = "MM/dd/yyyy" })
                </div>
            </div>


                        <div class="form-group">
                            <label class="control-label col-md-2">Trạng thái </label>
                            <div class="col-md-10">
                                @Html.DropDownList("drlStatus", (SelectList)ViewBag.Status, new { id = "drlStatus", @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Loại dự án </label>
                            <div class="col-md-10">
                                @Html.DropDownList("drlCategory", (SelectList)ViewBag.CategoryID, new { id = "drlCategory", @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-10 col-md-2">
                                <input type="submit" value="Thống kê" class="btn btn-primary" />
                            </div>
                        </div>
                        }
    </div>
    <div class="box box-success">
        <div class="box-header">
            <h3 class="box-title">KẾT QUẢ</h3>
        </div>
        <div class="box-body">
           
            @{

                if (ViewBag.Project != null)
                {
                    var stt = 0;
                    var collProdut = ViewBag.Product.Count * 3;
                    <table id="HoSoPTT" class="table table-bordered  col-md-10" data-name="cool-table">
                        <thead>
                            <tr>
                                <th  rowspan="3">
                                   STT
                                </th>
                                <th  rowspan="3">
                                    MÃ DỰ ÁN
                                </th>

                                <th  rowspan="3">
                                    TÊN DỰ ÁN
                                </th>
                                <th  rowspan="3">
                                    THỜI GIAN BẮT ĐẦU
                                </th>
                                <th  rowspan="3">
                                    THỜI GIAN KẾT THÚC
                                </th>
                                <th  rowspan="3">
                                    NHÓM PHÁT TRIỂN
                                </th>
                                <th  rowspan="3">CHỦ ĐẦU TƯ</th>
                                <th  rowspan="3">NHÀ THẦU THI CÔNG</th>
                                <th  rowspan="3">ĐƠN VỊ CUNG ỨNG</th>
                                <th colspan="@collProdut">SẢN PHẨM</th>
                                <th  rowspan="3">TỔNG GIÁ TRỊ</th>
                            </tr>
                            <tr> @{
                                foreach (var pd in ViewBag.Product)
                                {

                                    <td colspan="3">@pd.Code</td>

                                }
                            }
                            </tr>
                            <tr>
                                @{ 
                                    for (var i = 0; i < collProdut-1; i++)
                                    {

                                        if (i%3==0  )
                                        {
                                            <td>Giá trị</td>
                                            <td>Triết khấu % ngoài HĐ</td>
                                            <td>Triết khấu % trên HĐ</td>
                                        }
                                        
                                    }
                                }
                            </tr>
                        </thead>
                        <tbody>
                            
                            @foreach (var pj in ViewBag.Project)
                            { stt= stt + 1;
                                <tr>
                                    
                                    <td>@stt</td>
                                    <td>@pj.Code</td>
                                    <td>@pj.Name</td>
                                    <td>@pj.StartDate.ToString("MM/dd/yyyy")</td>
                                    <td> @pj.DateLine.ToString("MM/dd/yyyy")</td>
                                    <td >
                                    @{
                                        var usr = "";
                                        foreach (var gu in ViewBag.Member)
                                        {
                                            if(gu.ProjectID == pj.ProjectID)
                                            {
                                                usr += gu.FullName + "; ";
                                            }
                                        }
                                        //usr = usr.Remove(usr.Length-2, 2);
                                    }
                                    @usr</td>
                                    <td>
                                        @{
                                            var ctn = "";
                                            foreach (var ct in ViewBag.Contrator)
                                            {
                                                if (ct.ProjectID == pj.ProjectID)
                                                {
                                                    ctn += ct.ContraName + "; ";
                                                }
                                            }
                                          //  ctn = ctn.Remove(ctn.Length - 2, 2);
                                        }
                                        @ctn
                                </td>
                                    <td>
                                        @{
                                            var bdn = "";
                                            foreach (var bd in ViewBag.Builer)
                                            {
                                                if (bd.ProjectID == pj.ProjectID)
                                                {
                                                    bdn += bd.BuilderName + "; ";
                                                }
                                            }
                                           // bdn = bdn.Remove(bdn.Length - 2, 2);
                                        }
                                        @bdn
                                    
                                   </td>
                                    <td >
                                        @{
                                            var sp = "";
                                            foreach (var s in ViewBag.Supplier)
                                            {
                                                if (s.ProjectID == pj.ProjectID)
                                                {
                                                    sp += s.SupplierName + "; ";
                                                }
                                            }
                                          //  sp = sp.Remove(sp.Length - 2, 2);
                                        }
                                        @sp
                                    </td>
                                    @{  
                                        var col = 0;
                                        var ft = false;
                                        foreach (var pd in ViewBag.Product)
                                        {
                                            ft = true;
                                            foreach (var pdP in ViewBag.ProductProject)
                                            {
                                                if (pj.ProjectID == pdP.ProjectID && pdP.ProductID == pd.ProductID)
                                                {
                                                    col += 3;
                                                    <td>@pdP.Price</td>
                                                    <td>@pdP.Discount</td>
                                                    <td>@pdP.DiscountVAT</td>
                                                    ft = false;

                                                }

                                            }

                                            if (ft == true)
                                            {
                                                <td></td>
                                                <td></td>
                                                <td></td>

                                            }
                                        }
                                      
                                    }
                                    
                                   
                                    <td>@pj.Value</td>
                                </tr>
                               
                                    }

</tbody>
                        </table>
                        
                        }}
</div>
       </div>

        </div>
