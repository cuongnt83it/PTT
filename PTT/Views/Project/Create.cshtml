@model Model.EF.Project

@{
    ViewBag.Title = "Project/Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section ClienCSS{
    <!-- DataTables -->
    <link rel="stylesheet" href="~/Access/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
    <!-- iCheck for checkboxes and radio inputs -->
    <link rel="stylesheet" href="~/Access/plugins/iCheck/all.css">
    <!-- Select2 -->
    <link rel="stylesheet" href="~/Access/bower_components/select2/dist/css/select2.min.css">

}
@section FooterClienScript{

    <script src="~/Access/js/controller/projectController.js"></script>

    <!-- Select2 -->
    <script src="~/Access/bower_components/select2/dist/js/select2.full.min.js"></script>
    <script src="~/Access/bower_components/bootstrap-daterangepicker/daterangepicker.js"></script>
    <!-- bootstrap datepicker -->
    <script src="~/Access/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <!-- bootstrap color picker -->
    <script src="~/Access/bower_components/bootstrap-colorpicker/dist/js/bootstrap-colorpicker.min.js"></script>
    <!-- bootstrap time picker -->
    <script src="~/Access/plugins/timepicker/bootstrap-timepicker.min.js"></script>
    <!-- iCheck 1.0.1 -->
    <script src="~/Access/plugins/iCheck/icheck.min.js"></script>
    <!-- FastClick -->
    <script src="~/Access/bower_components/fastclick/lib/fastclick.js"></script>
    <script>
        $(function () {



            $('#EndCreate').datepicker({
                autoclose: true
            })
            $('.select2').select2()
        })
    </script>
}

@section ContenHeader{
    <section class="content-header">
        <h1>
            Đăng ký dự án
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/Project/Create"><i class="fa fa-dashboard"></i> Đăng ký dự án</a></li>
        </ol>
    </section>
}
<div class="box">
    <div class="box-body">
        @using (Html.BeginForm("Create", "Project", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title">Thông tin dự án</h3>
                </div>
                <div class="box-body">
                   
                    <div class="form-group">
                        <label class="control-label col-md-2">Tên dự án</label>
                        <div class="col-md-10">
                            @Html.TextBox("Name","", new { @class = "form-control", @required = "required", @autoforcus = "autoforcus", @placeholder = "Tên dự án" })
                           
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CityID, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.DropDownListFor(model => model.CityID, null, new { id = "Cities", @class = "form-control", @placeholder = "Thành phố" })
                            @Html.ValidationMessageFor(model => model.CityID, "", new { @class = "text-danger" })
                        </div>
                        @Html.LabelFor(model => model.DistrictID, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.DropDownListFor(model => model.DistrictID, null, new { id = "District", @class = "form-control", @placeholder = "Quận huyện" })
                            @Html.ValidationMessageFor(model => model.DistrictID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @autoforcus = "autoforcus", @placeholder = "Địa chỉ" , @required = "required" })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.EndCreate, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.EndCreate, new { @class = "form-control", @autoforcus = "autoforcus",id="EndCreate", @placeholder = "MM/dd/yyyy", @required = "required" })
                            @Html.ValidationMessageFor(model => model.EndCreate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CategoryID, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.DropDownListFor(model => model.CategoryID, null, new { id = "CategoryID", @class = "form-control", @placeholder = "Loại dự án" })
                            @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                        </div>
                        @Html.LabelFor(model => model.ResourceID, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.DropDownListFor(model => model.ResourceID, null, new { id = "ResourceID", @class = "form-control", @placeholder = "Nguồn vốn" })
                            @Html.ValidationMessageFor(model => model.ResourceID, "", new { @class = "text-danger" })
                        </div>
                        @Html.LabelFor(model => model.PriceID, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.DropDownListFor(model => model.PriceID, null, new { id = "PriceID", @class = "form-control", @placeholder = "Giá dự án" })
                            @Html.ValidationMessageFor(model => model.PriceID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                       
                        <label class = "control-label col-md-2">Đăng ký thành viên</label>
                        <div class="col-md-10">
                            @Html.DropDownList("drbMember", (MultiSelectList)ViewBag.Member, new {  @class = "form-control select2", @multiple = "multiple", @placeholder = "Thành viên phát triển" })
                           
                        </div>
                      
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Khu vực nhà cung ứng</label>
                        <div class="col-md-10">
                            @Html.DropDownList("drlCity", (SelectList)ViewBag.CityID, new { id = "drlCity", @class = "form-control", @placeholder = "Thành phố" })
                        </div>

                    </div>
                    <div class="form-group">
                        <label for="drlSupplier" class="control-label col-md-2">Nhà cung ứng</label>
                        <div class="col-md-10">
                            @Html.DropDownList("drlSupplier", (SelectList)ViewBag.Supplier, new { @class = "form-control", @id = "drlSupplier" })
                        </div>
                    </div>
                    <div class="box box-success">
                        <div class="box-header">
                            <h3 class="box-title col-md-2">Chủ đầu tư</h3>
                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.TextBox("txtContratorID", null, new { @class = "form-control", @autoforcus = "autoforcus", @required = "required", @placeholder = "Mã chủ đầu tư" })
                                </div>
                                <button class="btn btn-primary class=col-md-3" type="button" id="btnContraID">Chọn mã..</button>
                            </div>
                        </div>
                        <div class="box-body">
                            <div id="contentContrator"></div>

                        </div>
                        <!-- /.box-body -->
                    </div>
                    <div class="box box-success">
                        <div class="box-header">
                            <h3 class="box-title col-md-2">Nhà thầu thi công</h3>
                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.TextBox("txtBuilder", null, new { @class = "form-control", @required = "required", @autoforcus = "autoforcus", @placeholder = "Mã chủ thầu" })
                                </div>
                                <button class="btn btn-primary class=col-md-3" type="button" id="btnBuilderID">Chọn mã..</button>
                            </div>
                        </div>
                        <div class="box-body">

                            <div id="contentBuilder"></div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                 
                    <div class="box box-success">
                        <div class="box-header">
                            <h3 class="box-title">ĐỐI THỦ CẠNH TRANH</h3>
                        </div>
                        <div class="box-body">
                            <div class="form-group">
                                <label for="drlCompetitor" class="control-label col-md-2">Đối thủ cạnh tranh:</label>
                                <div class="col-md-6">
                                    @Html.DropDownList("drlCompetitor", (MultiSelectList)ViewBag.Competitor, new { @class = "form-control select2", @multiple = "multiple" })
                                </div>
                            </div>
                            @{

                                foreach (var compe in ViewBag.ListCompetitor)
                                {
                                    var divID = "dv" + compe.ID;
                                    <div class="box box-solid collapse" id="@divID">
                                        <div class="box-header with-border">
                                            <h3 class="box-title">@compe.CompetitorName</h3>
                                        </div>
                                        <!-- /.box-header -->
                                        <div class="box-body clearfix">
                                            
                                           @{ 

                                               var j = 0;

                                               foreach (var p in ViewBag.Products)
                                               {

                                            <div class="col-md-2">
                                                @{
                                                    var name = "cblProduct" + compe.ID;
                                                    var value =   p.ProductID;

                                                    var txtDiscount = "txtDiscount" + compe.ID + "_" + p.ProductID;
                                                    var txtDiscountVAT = "txtDiscountVAT" + compe.ID + "_" + p.ProductID;
                                                    var tile = p.MetaTite;
                                                }
                                                <label data-toggle="tooltip" title="@tile">
                                                    <input type="checkbox" value="@value" id="@name" name="@name"> @p.Code
                                                </label><br />
                                                <label for="@txtDiscount" class="control-label">CK % ngoài HĐ</label>
                                                <input type="text" class="form-control" id="@txtDiscount" name="@txtDiscount" placeholder="Ck % ngoài HĐ">
                                                <label for="@txtDiscountVAT" class="control-label">CK % trên HĐ</label>
                                                <input type="text" class="form-control" id="@txtDiscountVAT" name="@txtDiscountVAT" placeholder="Ck % trên HĐ">
                                            </div>
                                                            j += 1;

                                                        }

                                                    }
                                        </div>
                                        <!-- /.box-body -->
                                    </div>
                                      }

                            }
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <div class="box box-success">
                        <div class="box-header">
                            <h3 class="box-title">SẢN PHẨM NHỰA TIỀN PHONG</h3>
                        </div>
                        <div class="box-body">
                            @{
                                var i = 0;
                                foreach (var p in ViewBag.Products)
                                {



                                    <div class="col-md-2">
                                        @{
                                            var value = p.ProductID;
                                            var txtPrice = "txtPrice" + p.ProductID;
                                            var txtDiscount = "txtDiscount" + p.ProductID;
                                            var txtDiscountVAT = "txtDiscountVAT" + p.ProductID;
                                            var tile = p.MetaTite;
                                        }
                                        <label data-toggle="tooltip" title="@tile">
                                            <input type="checkbox" value="@value" id="cblProduct" name="cblProduct"> @p.Code
                                        </label><br />
                                        <label for="@txtPrice" class="control-label">Giá trị</label>
                                        <input type="text" class="form-control" id="@txtPrice" name="@txtPrice" placeholder="Giá trị">
                                        <label for="@txtDiscount" class="control-label">CK % ngoài HĐ</label>
                                        <input type="text" class="form-control" id="@txtDiscount" name="@txtDiscount" placeholder="CK % ngoài HĐ ">
                                        <label for="@txtDiscountVAT" class="control-label">CK % trên HĐ</label>
                                        <input type="text" class="form-control" id="@txtDiscountVAT" name="@txtDiscountVAT" placeholder="CK % trên HĐ ">
                                    </div>
                                                i += 1; 

                                            }

                            }

                        </div>
                        <!-- /.box-body -->
                        
                    </div>
                    <div class="form-group">

                        <label class="control-label col-md-2">Mô tả dự án </label>
                        <div class="col-md-10">
                            @Html.TextArea("txtDescription", "", new { id = "txtDescription", @class = "form-control", @placeholder = "Mô tả thông tin dự án" })
                        </div>
                    </div>
                     
                </div>

             
            </div>
            <div class="form-group">
                <div class="col-md-offset-10 col-md-2">
                    <input type="submit" value="Đăng ký" class="btn btn-primary" />
                </div>
            </div>
                                            }

    </div>
</div>
<!-- Modal -->
<div id="ContratorModal" class="modal fade" style="display: none;">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Chọn chủ đầu tư</h4>
            </div>
            <div class="modal-body">
                @Html.DropDownList("drlContrator", (SelectList)ViewBag.Contrator, new { @class = "form-control" })
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="ContratorChoice" data-dismiss="modal">Chọn</button>
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Thoát</button>
            </div>
        </div>

    </div>
</div>

<!-- Modal -->
<div id="BuilderModal" class="modal fade" style="display: none;">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Chọn nhà thầu</h4>
            </div>
            <div class="modal-body">
                @Html.DropDownList("drlBuilder", (SelectList)ViewBag.Builder, new { @class = "form-control" })
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="BuilderChoice" data-dismiss="modal">Chọn</button>
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Thoát</button>
            </div>
        </div>

    </div>
</div>